<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView"
        android:textSize="60sp"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button11"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        />

    <Button
        android:id="@+id/button11"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"

        android:background="@drawable/roundedbuttonorange"
        android:text="AC"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintStart_toEndOf="@id/button11"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:text="C"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/button13"
        app:layout_constraintStart_toEndOf="@id/button12"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginStart="15dp"
        android:text="%"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttonblack"
        android:layout_marginStart="15dp"
        android:text="/"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@id/button13"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteY="240dp" />


    <Button
        android:id="@+id/button21"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginTop="15dp"
        android:text="7"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button11"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button22"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintStart_toEndOf="@id/button21"
        app:layout_constraintTop_toBottomOf="@id/button11"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="8"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button23"
        app:layout_constraintStart_toEndOf="@id/button22"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintTop_toBottomOf="@id/button13"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="9"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button24"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginStart="15dp"
        android:text="X"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button23"
        app:layout_constraintTop_toBottomOf="@id/button14"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="360dp" />










    <Button
        android:id="@+id/button31"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginTop="15dp"
        android:text="4"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button21"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button32"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintStart_toEndOf="@id/button21"
        app:layout_constraintTop_toBottomOf="@id/button21"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="5"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button33"
        app:layout_constraintStart_toEndOf="@id/button22"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintTop_toBottomOf="@id/button23"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="6"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button34"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginStart="15dp"
        android:text="-"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@id/button23"
        app:layout_constraintTop_toBottomOf="@id/button24"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="360dp" />










    <Button
        android:id="@+id/button41"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginTop="15dp"
        android:text="1"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button31"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button42"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintStart_toEndOf="@id/button21"
        app:layout_constraintTop_toBottomOf="@id/button31"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="2"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button43"
        app:layout_constraintStart_toEndOf="@id/button22"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintTop_toBottomOf="@id/button31"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="3"
        android:textSize="27sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button44"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"

        android:layout_marginStart="15dp"
        android:text="+"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@id/button23"
        app:layout_constraintTop_toBottomOf="@id/button34"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="360dp" />







    <Button
        android:id="@+id/button51"
        android:layout_width="185dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button44"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button52"
        app:layout_constraintStart_toEndOf="@id/button51"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        app:layout_constraintTop_toBottomOf="@id/button43"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="."
        android:textSize="26sp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/button53"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/roundedbuttongray"
        android:layout_marginStart="15dp"
        android:text="="
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@id/button43"
        app:layout_constraintTop_toBottomOf="@id/button44"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="360dp" />




</androidx.constraintlayout.widget.ConstraintLayout>